{{extend 'layout.html'}}
<h1>Blog Posts</h1>
<table width="100%">
    <tr>
        <td><h3>Post Title</h3></td>
        <td><h3>Post issued on</h3></td>
    </tr>
</table>
{{#a python block start with : and end with pass statement in web2py}}
{{for row in rows:}}
<table width="100%">
    <tr>
        <td><h4><a href="{{=URL('viewPost',args=row.id)}}">  {{=row.Title}}  </a>        </h4></td>
        <td><h4>{{=str(row.Posted_On)}} by {{=str(row.Posted_by)}} </h4></td>
    </tr>
</table>
{{pass}}
